<% banner_image_url = "https://res.cloudinary.com/dwf9pdzia/image/upload/v1694775836/iyyhcijtxi4rv5ymdtfi.png" %>

<h1 class="banner" style="background-image: url('<%= banner_image_url %>'); background-size: cover; background-repeat: no-repeat; background-position: center; color: black; padding: 40px 20px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1); border-radius: 5px;">Movie Lists</h1>


<ul class="list-group mt-4">
  <% @lists.each do |list| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <p>
          <%= link_to list.name, list_path(list), style: "text-decoration: none; color: black;" %>
        </p>
      </div>
      <div>
        <%= link_to "Delete",
          list_path(list),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: 'btn border btn-sm' %>
      </div>
    </li>
  <% end %>
</ul>
<div class="mt-4">
  <%= link_to '+ Add a new list', new_list_path, class: 'btn border' %>
</div>
