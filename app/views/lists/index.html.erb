<h1>Movie Lists</h1>
<ul class="list-group mt-4">
  <% @lists.each do |list| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <p>
          <%= link_to list.name, list_path(list), style: "text-decoration: none; color: black;" %>
        </p>
      </div>
      <div>
        <%= link_to "Delete",
          list_path(list),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: 'btn border btn-sm' %>
      </div>
    </li>
  <% end %>
</ul>
<div class="mt-4">
  <%= link_to '+ Add a new list', new_list_path, class: 'btn border' %>
</div>
